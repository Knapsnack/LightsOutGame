<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LightsOutGame">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="321dp"
            android:layout_height="101dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/instructions"
            android:id="@+id/textIntro"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/height"
            android:id="@+id/textHeight"
            android:layout_row="1"
            android:layout_column="2"
            android:gravity="center"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="111dp"
            android:layout_height="94dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/widthValue"
            android:id="@+id/textWidthValue"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_rowSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/width"
            android:id="@+id/textHeight"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:gravity="center" />

        <Button
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="@string/plusSign"
            android:id="@+id/buttonIncreaseWidth"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="@string/minusSign"
            android:id="@+id/buttonDecreaseWidth"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/heightValue"
            android:id="@+id/textHeightValue"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_rowSpan="3" />

        <Button
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="@string/minusSign"
            android:id="@+id/buttonDecreaseHeight"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/plusSign"
            android:id="@+id/buttonIncreaseHeight"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="331dp"
            android:layout_height="107dp"
            android:text="@string/buildPuzzle"
            android:id="@+id/buttonBuildPuzzle"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="4" />
    </GridLayout>
</RelativeLayout>
